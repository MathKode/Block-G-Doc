{
  "manifest_version": 3,
  "name": "Block G-Doc",
  "version": "0.6",
  "description": "Demande une confirmation avant d'afficher un Google Doc.",
    
  "permissions": [],
  "host_permissions": [
    "https://docs.google.com/document/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["confirm.html", "confirm.css", "confirm.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content-blocker.js"],
      "run_at": "document_start"
    }
  ]
}
