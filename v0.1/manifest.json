{
  "manifest_version": 3,
  "name": "tut'",
  "version": "0.1",
  "description": "Demande une confirmation avant de charger le document dans google doc. Cela permet d'Ã©viter de casser les trames du tutorat",
    
  "permissions": [
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["confirm.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
       "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
  }
}
